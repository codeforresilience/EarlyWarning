        when 5
    %>
    <Say language="en-US" voice="alice">Barisai division.</Say>
    <Pause length="1"/>
    <Say language="en-US" voice="alice">Please select your city. Then press a star key.</Say>
    <Pause length="1"/>
    <Say language="en-US" voice="alice">Barguna. 1</Say>
    <Say language="en-US" voice="alice">Barisal. 2</Say>
    <Say language="en-US" voice="alice">Bhola. 3</Say>
    <Say language="en-US" voice="alice">Jhalokati. 4</Say>
    <Say language="en-US" voice="alice">Patuakhali. 5</Say>
